{
  "name": "simple-strategy-bot",
  "version": "1.0.0",
  "description": "BTC Trading Bot for accumulation strategy on Bybit",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm --prefix web-server run build",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:full": "concurrently \"ts-node src/index.ts\" \"npm --prefix web-server run dev\"",
    "dev:web": "npm --prefix web-server run dev",
    "collect-data": "ts-node src/collect-data.ts",
    "test": "jest",
    "test:balance": "ts-node src/test-balance.ts",
    "analyze-journal": "ts-node scripts/analyze-journal.ts",
    "analyze-all": "ts-node scripts/analyze-all-strategies.ts",
    "analyze-session": "ts-node scripts/analyze-session.ts",
    "compare-sessions": "ts-node scripts/compare-sessions.ts",
    "analyze-losses": "ts-node scripts/analyze-losing-trades.ts",
    "analyze-losing-longs": "ts-node scripts/analyze-losing-longs.ts",
    "analyze-indicators": "node scripts/analyze-indicators.js",
    "analyze-patterns": "ts-node scripts/analyze-loss-patterns-v2.ts",
    "analyze-entry-conditions": "ts-node scripts/analyze-entry-conditions.ts",
    "analyze-missed": "ts-node scripts/analyze-missed-opportunities.ts",
    "analyze-backtest": "ts-node scripts/parse-backtest.ts",
    "analyze-last-24h": "ts-node scripts/analyze-last-24h.ts",
    "analyze-all:last-24h": "ts-node scripts/analyze-all-last-24h.ts",
    "analyze-all:patterns": "ts-node scripts/analyze-all-patterns.ts",
    "analyze-regimes": "ts-node scripts/analyze-market-regimes-simple.ts",
    "calibrate": "ts-node scripts/adaptive-calibrator.ts",
    "calibrate-rr": "ts-node scripts/calibrate-strategy.ts",
    "calibrate-entries": "ts-node scripts/calibrate-entries.ts",
    "calibrate:all": "scripts\\calibrate-all.bat",
    "calibrate:microwall": "ts-node --transpile-only scripts/calibrate-scalping.ts microwall",
    "calibrate:xrpusdt": "ts-node --transpile-only scripts/calibrate-scalping.ts xrpusdt",
    "calibrate:laddertp": "ts-node --transpile-only scripts/calibrate-scalping.ts laddertp",
    "calibrate:limitorder": "ts-node --transpile-only scripts/calibrate-scalping.ts limitorder",
    "calibrate:orderflow": "ts-node --transpile-only scripts/calibrate-scalping.ts orderflow",
    "calibrate:rr-optimizer": "ts-node --transpile-only scripts/calibrate-rr-optimizer.ts",
    "fix-journal-pnl": "ts-node scripts/fix-journal-pnl.ts",
    "download-data": "ts-node scripts/download-historical-data.ts",
    "backtest": "ts-node scripts/run-backtest.ts",
    "backtest:json": "ts-node scripts/run-backtest.ts --source json",
    "backtest:sqlite": "ts-node scripts/run-backtest.ts --source sqlite",
    "backtest:v4": "ts-node scripts/run-backtest-v4.ts",
    "backtest-grid": "ts-node scripts/run-backtest.ts grid",
    "compare-exchange": "ts-node scripts/compare-exchange-data.ts",
    "compare-bybit": "ts-node scripts/compare-bybit-stats.ts",
    "compare-bybit:today": "ts-node scripts/compare-bybit-stats.ts $(date -u -d '1 day ago' +%Y-%m-%d) $(date -u +%Y-%m-%d)",
    "verify-pnl": "ts-node scripts/verify-pnl.ts",
    "check-duplicates": "ts-node scripts/check-journal-duplicates.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:config": "eslint src/config/**/*.ts",
    "lint:quiet": "eslint src/**/*.ts --quiet",
    "lint:magic": "eslint src/**/*.ts --format json | npx ts-node -e \"const fs = require('fs'); const data = fs.readFileSync(0, 'utf-8'); const json = JSON.parse(data); const files = {}; json.forEach(f => { if(f.messages.some(m => m.ruleId === 'no-magic-numbers')) { files[f.filePath] = f.messages.filter(m => m.ruleId === 'no-magic-numbers').length; } }); Object.entries(files).sort((a,b) => b[1] - a[1]).forEach(([file, count]) => console.log(count.toString().padStart(3) + '  ' + file.split('\\\\').pop()));\"",
    "format": "prettier --write src/**/*.ts",
    "refactor:magic-numbers": "ts-node scripts/refactor-magic-numbers.ts",
    "refactor:magic-numbers-phase2": "ts-node scripts/refactor-remaining-magic.ts",
    "refactor:magic-numbers-phase3": "ts-node scripts/refactor-remaining-magic-phase3.ts",
    "refactor:magic-numbers-phase4": "ts-node scripts/refactor-phase4-strategies.ts",
    "refactor:magic-numbers-all": "ts-node scripts/refactor-all-remaining.ts",
    "deploy": "scripts\\deploy-to-prod.bat",
    "deploy:weight": "scripts\\deploy-to-prod.bat weight",
    "deploy:all": "scripts\\deploy-all-strategies.bat",
    "deploy:microwall": "scripts\\deploy-microwall.bat",
    "deploy:xrpusdt": "scripts\\deploy-xrpusdt.bat",
    "deploy:laddertp": "scripts\\deploy-laddertp.bat",
    "deploy:limitorder": "scripts\\deploy-limitorder.bat",
    "deploy:orderflow": "scripts\\deploy-orderflow.bat",
    "deploy:edgereversal": "scripts\\deploy-edgereversal.bat",
    "deploy:data-collector": "scripts\\deploy-data-collector.bat",
    "deploy:calibration": "node scripts/deploy-calibration-wrapper.js",
    "deploy:calibration:block": "node scripts/deploy-calibration-wrapper.js block",
    "deploy:calibration:microwall": "node scripts/deploy-calibration-wrapper.js microwall",
    "deploy:calibration:xrpusdt": "node scripts/deploy-calibration-wrapper.js xrpusdt",
    "deploy:calibration:laddertp": "node scripts/deploy-calibration-wrapper.js laddertp",
    "deploy:calibration:limitorder": "node scripts/deploy-calibration-wrapper.js limitorder",
    "deploy:calibration:orderflow": "node scripts/deploy-calibration-wrapper.js orderflow",
    "deploy:calibration:weight": "node scripts/deploy-calibration-wrapper.js weight",
    "build:fractal": "scripts\\build-fractal.bat",
    "test:fractal": "scripts\\test-fractal.bat",
    "deploy:fractal": "scripts\\deploy-fractal.bat",
    "collect-calibration-results": "ts-node scripts/collect-calibration-results.ts",
    "collect-calibration-results:update": "ts-node scripts/collect-calibration-results.ts --update",
    "validate-patterns": "ts-node scripts/validate-patterns.ts",
    "discover-patterns-ml": "ts-node scripts/discover-patterns-ml.ts",
    "discover-patterns-simple": "ts-node scripts/discover-patterns-simple.ts",
    "discover-patterns-multiframe": "ts-node scripts/discover-patterns-multiframe.ts",
    "extract-features": "ts-node scripts/extract-features-from-candles.ts",
    "extract-features:full": "ts-node scripts/extract-features-full-analysis.ts"
  },
  "keywords": [
    "trading",
    "bot",
    "bitcoin",
    "bybit",
    "cryptocurrency",
    "automation"
  ],
  "author": "Trading Bot Developer",
  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81",
    "bybit-api": "^4.4.0",
    "dotenv": "^16.4.4",
    "glob": "^11.0.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/blessed": "^0.1.27",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.16",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios": "^1.13.2",
    "concurrently": "^9.2.1",
    "depcheck": "^1.4.7",
    "eslint": "^8.56.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
